# Production Environment Variables for Backend
# Copy this to .env and update values

# Server Configuration
PORT=3000
ENV=production

# CORS - Allow frontend container
CORS_ORIGIN=http://localhost

# JWT Configuration (CHANGE THIS - Generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-32chars-minimum

# JWT Expiry (in hours)
JWT_EXPIRY_HOURS=24

# Database
DATABASE_PATH=data/tienda.db

# Uploads
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE_MB=5
